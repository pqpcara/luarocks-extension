{
  "icon": "icon.png",
  "publisher": "luarocks",
  "name": "luarocks",
  "displayName": "LuaRocks Support",
  "description": "Manage LuaRocks from Visual Studio Code.",
  "version": "0.0.2",
  "author": {
    "name": "pqpcara",
    "url": "https://github.com/pqpcara"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Linters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "rockspec",
        "aliases": [
          "Rockspec",
          "rockspec"
        ],
        "extensions": [
          ".rockspec"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rockspec",
        "scopeName": "source.rockspec",
        "path": "./syntaxes/rockspec.json"
      }
    ],
    "snippets": [
      {
        "language": "rockspec",
        "path": "./snippets/rockspec.json"
      }
    ],
    "commands": [
      {
        "command": "luarocks-support.init",
        "title": "LuaRocks: Init New Package",
        "category": "LuaRocks"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "package:vsix": "pnpm run package && vsce package",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/node": "25.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^3.2.0"
  }
}