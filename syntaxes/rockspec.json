{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rockspec",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#tables"
    },
    {
      "include": "#functions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.rockspec",
          "match": "--.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rockspec",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rockspec",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.rockspec",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.rockspec",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.rockspec",
          "match": "\\b\\d+(\\.\\d+)*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.rockspec",
          "match": "\\b(rockspec_format|package|version|description|author|maintainer|license|url|homepage|issues_url|labels|dependencies|build|type|modules|copy_directories|external_dependencies|test|test_type)\\b"
        },
        {
          "name": "constant.language.rockspec",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.rockspec",
          "match": "(=|==|~=|<=|>=|<|>|and|or|not)"
        }
      ]
    },
    "tables": {
      "patterns": [
        {
          "name": "punctuation.section.braces.begin.rockspec",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.rockspec",
          "match": "\\}"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.rockspec",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  },
  "scopeName": "source.rockspec"
}
